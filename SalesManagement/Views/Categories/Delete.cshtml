@using SalesManagement.Models.Entities
@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Delete Category</h2>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Warning -->
    <div class="alert alert-warning shadow-sm rounded-4" role="alert">
        <h5 class="fw-semibold mb-0">Are you sure you want to delete this category?</h5>
    </div>

    <!-- Category Info -->
    <div class="shadow-sm p-4 rounded-4 bg-white mb-4">
        <h5 class="fw-semibold mb-3">Category Info</h5>
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>
        </dl>
    </div>

    <!-- Delete Form -->
    <div class="d-flex gap-2">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill shadow-sm">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>

</div>
