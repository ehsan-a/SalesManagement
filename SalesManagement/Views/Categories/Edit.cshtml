@using SalesManagement.Models.Entities
@model Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Edit Category</h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Edit Form -->
    <div class="row justify-content-start">
        <div class="col-md-6">
            <form asp-action="Edit" class="shadow-sm p-4 rounded-4 bg-white">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter category title..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary rounded-pill">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
