@model SalesManagement.Models.Transaction

@{
    ViewData["Title"] = "Transaction Details";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Transaction Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-primary rounded-pill me-2 shadow-sm">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill shadow-sm">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Transaction Info -->
    <div class="shadow-sm p-4 rounded-4 bg-white mb-5">
        <h5 class="fw-semibold mb-3">Transaction Info</h5>
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3 fw-semibold">Date</dt>
            <dd class="col-sm-9">@Model.DateTime.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3 fw-semibold">Customer</dt>
            <dd class="col-sm-9">@Model.Customer.LastName</dd>
        </dl>
    </div>

    <!-- Transaction Products -->
    <div class="mb-5">
        <h5 class="fw-semibold mb-3">Transaction Products</h5>
        <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TransactionProducts)
                    {
                        <tr>
                            <td>@item.Product.Title</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice.ToString("C")</td>
                            <td class="text-center">
                                <a asp-controller="TransactionProducts" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-info rounded-pill">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
