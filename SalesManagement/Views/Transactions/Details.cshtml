@using SalesManagement.Models.Entities
@model Transaction

@{
    ViewData["Title"] = "Transaction Details";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">Transaction Details</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-pencil-square me-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Transaction Info Card -->
    <div class="card shadow-sm rounded-4 mb-4">
        <div class="card-body p-4 p-md-5">
            <h4 class="fw-semibold mb-3">Transaction Info</h4>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                <dt class="col-sm-4 fw-semibold">Date</dt>
                <dd class="col-sm-8">@Model.DateTime.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-4 fw-semibold">Customer</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.LastName)</dd>
            </dl>
        </div>
    </div>

    <!-- Transaction Products Card -->
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">
            <h4 class="fw-semibold mb-3">Transaction Products</h4>
            <hr />
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TransactionProducts)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Product.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                <td>@item.UnitPrice.ToString("0.00")</td>
                                <td class="text-center">
                                    <a asp-controller="TransactionProducts" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary rounded-pill">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.TransactionProducts.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No transaction products found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
