@using SalesManagement.Models.ViewModels
@model TransactionIndexViewModel

@{
    ViewData["Title"] = "Transactions";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Transactions</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <!-- Filter Form -->
    <form asp-controller="Transactions" asp-action="Index" class="row g-3 mb-4 align-items-end">
        <div class="col-md-1">
            <label class="form-label fw-semibold">Type</label>
            <select name="transactionType" class="form-select" asp-items="Model.SelectListType">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">Customer</label>
            <select name="transactionCustomer" class="form-select" asp-items="Model.SelectListCustomer">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">From</label>
            <input type="datetime-local" asp-for="fromDate" value="@Model.fromDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label fw-semibold">To</label>
            <input type="datetime-local" asp-for="toDate" value="@Model.toDate" class="form-control" />
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-outline-primary rounded-pill">
                <i class="bi bi-funnel"></i> Filter
            </button>
        </div>
    </form>

    <!-- Transactions Table -->
    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark text-white">
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Customer</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Type
                        </td>
                        <td>
                            @item.DateTime.ToString("yyyy-MM-dd HH:mm")
                        </td>
                        <td>
                            @(item.Customer.FirstName + " " + item.Customer.LastName)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info rounded-pill me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
