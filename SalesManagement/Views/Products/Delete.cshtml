@using SalesManagement.Models.Entities
@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-3 mb-md-0 text-danger">Delete Product</h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>

    <!-- Product Details Card -->
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 650px;">
        <div class="card-body p-4 p-md-5">

            <p class="mb-4">Are you sure you want to delete this product? This action cannot be undone.</p>

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-semibold">Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4 fw-semibold">Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-4 fw-semibold">Is Active</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>

                <dt class="col-sm-4 fw-semibold">Min Quantity</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MinQuantity)</dd>

                <dt class="col-sm-4 fw-semibold">Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type.Title)</dd>
            </dl>

            <form asp-action="Delete" method="post" class="text-end">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger rounded-pill px-4">
                    <i class="bi bi-trash me-2"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 ms-2">
                    Cancel
                </a>
            </form>

        </div>
    </div>
</div>
