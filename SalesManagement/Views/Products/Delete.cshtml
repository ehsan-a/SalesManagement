@using SalesManagement.Models.Entities
@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Delete Product</h2>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Confirmation Card -->
    <div class="shadow-sm p-4 rounded-4 bg-white">
        <h5 class="fw-semibold mb-4 text-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this product?
        </h5>

        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold">Title</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-4 fw-semibold">Price</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-4 fw-semibold">Is Active</dt>
            <dd class="col-sm-8">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </dd>

            <dt class="col-sm-4 fw-semibold">Min Quantity</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.MinQuantity)</dd>

            <dt class="col-sm-4 fw-semibold">Type</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Type.Title)</dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill shadow-sm">
                <i class="bi bi-trash-fill me-2"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
        </form>
    </div>

</div>
