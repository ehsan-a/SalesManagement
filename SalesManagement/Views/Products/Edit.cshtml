@model SalesManagement.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">Edit Product</h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>

    <!-- Edit Product Card -->
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-4 p-md-5">
            <h2 class="card-title fw-bold mb-3">Edit Product</h2>
            <hr />

            <form asp-action="Edit" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Type -->
                <div class="mb-3">
                    <label asp-for="TypeId" class="form-label fw-semibold"></label>
                    <select asp-for="TypeId" class="form-select" asp-items="ViewBag.TypeId"></select>
                    <span asp-validation-for="TypeId" class="text-danger"></span>
                </div>

                <!-- Min Quantity -->
                <div class="mb-3">
                    <label asp-for="MinQuantity" class="form-label fw-semibold"></label>
                    <input asp-for="MinQuantity" class="form-control" />
                    <span asp-validation-for="MinQuantity" class="text-danger"></span>
                </div>

                <!-- Is Active -->
                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label fw-semibold">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">
                        <i class="bi bi-check2-circle me-2"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-x-circle me-2"></i> Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
