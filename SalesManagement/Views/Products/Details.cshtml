@using SalesManagement.Models.Entities
@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">Product Details</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-pencil-square me-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Product Info Card -->
    <div class="card shadow-sm rounded-4 mx-auto mb-4" style="max-width: 700px;">
        <div class="card-body p-4 p-md-5">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4 fw-semibold">Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                <dt class="col-sm-4 fw-semibold">Is Active</dt>
                <dd class="col-sm-8">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>

                <dt class="col-sm-4 fw-semibold">Min Quantity</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MinQuantity)</dd>

                <dt class="col-sm-4 fw-semibold">Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Type.Title)</dd>
            </dl>
        </div>
    </div>

    <!-- Cardex / Transaction Products Table -->
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 900px;">
        <div class="card-body p-4 p-md-5">
            <h4 class="fw-semibold mb-3">Cardex / Transaction Products</h4>
            <hr />

            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle rounded-3 mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Transaction ID</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.TransactionProducts)
                        {
                            <tr>
                                <td>@item.TransactionId</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("0.00")</td>
                                <td class="text-center">
                                    <a asp-controller="TransactionProducts" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary rounded-pill">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.TransactionProducts.Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No transaction records found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>
