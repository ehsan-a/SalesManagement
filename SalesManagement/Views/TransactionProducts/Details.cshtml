@using SalesManagement.Models.Entities
@model TransactionProduct

@{
    ViewData["Title"] = "Transaction Product Details";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">Transaction Product Details</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-pencil-square me-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
            </a>
        </div>
    </div>

    <!-- TransactionProduct Details Card -->
    <div class="card shadow-sm rounded-4 mb-4 mx-auto" style="max-width: 700px;">
        <div class="card-body p-4 p-md-5">
            <h4 class="fw-semibold mb-3">Details</h4>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">Product</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Product.Title)</dd>

                <dt class="col-sm-4 fw-semibold">Transaction ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.TransactionId)</dd>

                <dt class="col-sm-4 fw-semibold">Quantity</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>

                <dt class="col-sm-4 fw-semibold">Unit Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UnitPrice)</dd>
            </dl>
        </div>
    </div>

</div>
