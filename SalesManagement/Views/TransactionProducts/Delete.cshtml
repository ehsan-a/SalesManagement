@using SalesManagement.Models.Entities
@model TransactionProduct

@{
    ViewData["Title"] = "Delete Transaction Product";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Delete Transaction Product</h2>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Confirmation Card -->
    <div class="shadow-sm p-4 rounded-4 bg-white">
        <h5 class="fw-semibold mb-4 text-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this transaction product?
        </h5>

        <dl class="row mb-4">
            <dt class="col-sm-3 fw-semibold">Product</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.Title)</dd>

            <dt class="col-sm-3 fw-semibold">Transaction ID</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Transaction.Id)</dd>

            <dt class="col-sm-3 fw-semibold">Quantity</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

            <dt class="col-sm-3 fw-semibold">Unit Price</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitPrice)</dd>
        </dl>

        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill shadow-sm">
                <i class="bi bi-trash-fill me-2"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
                <i class="bi bi-x-circle me-2"></i> Cancel
            </a>
        </form>
    </div>

</div>
