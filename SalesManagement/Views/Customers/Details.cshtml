@model SalesManagement.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Customer Details</h2>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-sm btn-outline-primary rounded-pill shadow-sm">
                <i class="bi bi-pencil-fill"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill shadow-sm">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Customer Info Card -->
    <div class="shadow-sm p-4 rounded-4 bg-white mb-4">
        <h5 class="fw-semibold mb-3">Customer Information</h5>
        <dl class="row mb-0">
            <dt class="col-sm-2 fw-semibold">First Name</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>

            <dt class="col-sm-2 fw-semibold">Last Name</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
        </dl>
    </div>

    <!-- Transactions Table -->
    <div class="shadow-sm rounded-4 overflow-hidden bg-white">
        <h5 class="fw-semibold p-3 mb-0 border-bottom">Transactions</h5>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>Type</th>
                        <th>Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Transactions)
                    {
                        <tr>
                            <td>@item.Type</td>
                            <td>@item.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-center">
                                <a asp-controller="Transactions" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-info rounded-pill">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                            </td>
                        </tr>
                    }
                    @if (!Model.Transactions.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">No transactions found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
