@using SalesManagement.Models.Entities
@model Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">Customer Details</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-pencil-square me-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Customer Details Card -->
    <div class="card shadow-sm rounded-4 mb-4">
        <div class="card-body p-4 p-md-5">

            <h4 class="fw-semibold mb-3">Customer Information</h4>
            <hr />

            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">First Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                <dt class="col-sm-4 fw-semibold">Last Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>
            </dl>

        </div>
    </div>

    <!-- Transactions Table Card -->
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">

            <h4 class="fw-semibold mb-3">Transactions</h4>
            <hr />

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Type</th>
                            <th>Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.Transactions)
                        {
                            <tr>
                                <td>@item.Type</td>
                                <td>@item.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-center">
                                    <a asp-controller="Transactions"
                                       asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary rounded-pill">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }

                        @if (!Model.Transactions.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-3">
                                    No transactions found.
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>

</div>
