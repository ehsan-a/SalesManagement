@using SalesManagement.Models.Entities
@model Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Edit Customer</h2>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill shadow-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <!-- Edit Form Card -->
    <div class="shadow-sm p-4 rounded-4 bg-white">
        <h5 class="fw-semibold mb-3">Customer Information</h5>

        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-semibold"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label fw-semibold"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary rounded-pill shadow-sm">
                    <i class="bi bi-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill shadow-sm">
                    <i class="bi bi-x-lg"></i> Cancel
                </a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
