@model IEnumerable<SalesManagement.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Customers</h2>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm d-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <!-- Filter Form -->
    <form asp-controller="Customers" asp-action="Index" class="row g-3 mb-4 align-items-end">
        <div class="col-md-4">
            <label class="form-label fw-semibold">Name</label>
            <input type="text" name="searchString" class="form-control" placeholder="Search by name..." />
        </div>
        <div class="col-md-2 d-grid">
            <button type="submit" class="btn btn-outline-primary rounded-pill">
                <i class="bi bi-funnel"></i> Filter
            </button>
        </div>
    </form>

    <!-- Customers Table -->
    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark text-white">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning rounded-pill me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info rounded-pill me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
