@model SalesManagement.Models.ProductType

@{
    ViewData["Title"] = "Product Type Details";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold mb-3 mb-md-0">Product Type Details</h1>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary rounded-pill px-4">
                <i class="bi bi-pencil-square me-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="bi bi-arrow-left-circle me-2"></i> Back to List
            </a>
        </div>
    </div>

    <!-- ProductType Details Card -->
    <div class="card shadow-sm rounded-4 mb-4">
        <div class="card-body p-4 p-md-5">
            <h4 class="fw-semibold mb-3">Details</h4>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4 fw-semibold">Category</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Title)</dd>
            </dl>
        </div>
    </div>

    <!-- Products Table Card -->
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4 p-md-5">
            <h4 class="fw-semibold mb-3">Products</h4>
            <hr />
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Price</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Products)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@item.Price.ToString("0.00")</td>
                                <td class="text-center">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
