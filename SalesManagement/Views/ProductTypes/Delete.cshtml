@using SalesManagement.Models.Entities
@model ProductType

@{
    ViewData["Title"] = "Delete Product Type";
}

<div class="container py-4">

    <!-- Page Header -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-danger mb-3 mb-md-0">Delete Product Type</h1>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left-circle me-2"></i> Back to List
        </a>
    </div>

    <!-- ProductType Details Card -->
    <div class="card shadow-sm rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-4 p-md-5">
            <h2 class="card-title fw-semibold mb-3">Product Type Details</h2>
            <hr />

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-semibold">Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-4 fw-semibold">Category</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Title)</dd>
            </dl>

            <!-- Delete Form -->
            <form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger rounded-pill px-4">
                    <i class="bi bi-trash3 me-2"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>
            </form>
        </div>
    </div>

</div>
